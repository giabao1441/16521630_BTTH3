<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTTH_Tuan3.PageThemLoaiHoa">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="Tên loại" Grid.Column="0" Grid.Row="0"/>
            <Entry x:Name="txtTenLoai" Grid.Column="1" Grid.Row="0"/>
            <Button x:Name="btnGhi" Text="Ghi" Grid.Column="0" Grid.Row="1" 
            Grid.ColumnSpan="2" VerticalOptions="Center" Clicked="cmdGhi_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>